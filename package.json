{
  "name": "astra-db-manager",
  "version": "0.1.0",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "electron-dev": "VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "vite",
    "build": "vite build",
    "test": "vitest run",
    "release": "electron-builder --publish always"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "keytar": "^7.9.0",
    "cassandra-driver": "^4.7.3",
    "yauzl": "^2.10.0",
    "@xterm/xterm": "^5.5.0",
    "@xterm/addon-fit": "^0.10.0"
  },
  "devDependencies": {
    "electron": "^28.2.0",
    "vite": "^5.4.0",
    "electron-builder": "^24.13.3",
    "@vue/test-utils": "^2.4.1",
    "jsdom": "^22.1.0",
    "vitest": "^1.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "electron-reload": "^1.5.0"
  },
  "overrides": {
    "esbuild": "^0.21.5"
  },
  "build": {
    "appId": "com.poloroid.astra-db-manager",
    "productName": "Astra DB Manager",
    "files": [
      "**/*",
      "!tests/**",
      "!**/*.spec.js"
    ],
    "asar": true,
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "identity": null
    },
    "win": {
      "target": ["nsis"],
      "artifactName": "${productName}-win-${arch}.${ext}"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Development",
      "artifactName": "${productName}-${os}-${arch}.${ext}"
    },
    "artifactName": "${productName}-${os}-${arch}.${ext}"
  }
}
